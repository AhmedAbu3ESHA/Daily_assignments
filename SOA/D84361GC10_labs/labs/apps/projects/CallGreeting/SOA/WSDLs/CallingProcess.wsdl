<?xml version="1.0" encoding="UTF-8"?>
<wsdl:definitions name="CallingProcess"
             targetNamespace="http://xmlns.oracle.com/FaultHandlingFramework/CallGreeting/CallingProcess"
             xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
             xmlns:client="http://xmlns.oracle.com/FaultHandlingFramework/CallGreeting/CallingProcess"
             xmlns:ns1="http://www.example.org"
             xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype">

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	TYPE DEFINITION - List of services participating in this BPEL process
	The default output of the BPEL designer uses strings as input and 
	output to the BPEL Process. But you can define or import any XML 
	Schema type and use them as part of the message types.
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->   
	<wsdl:types>
		<schema xmlns="http://www.w3.org/2001/XMLSchema">
			<import namespace="http://www.example.org" schemaLocation="../Schemas/SayHello.xsd" />
		</schema>
	</wsdl:types>

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	MESSAGE TYPE DEFINITION - Definition of the message types used as 
	part of the port type defintions
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->      
	<wsdl:message name="CallingProcessRequestMessage">
		<wsdl:part name="payload" element="ns1:request" />
	</wsdl:message>

	<wsdl:message name="CallingProcessResponseMessage">
		<wsdl:part name="payload" element="ns1:response" />
	</wsdl:message>


	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	PORT TYPE DEFINITION - A port type groups a set of operations into
	a logical service unit.
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- portType implemented by the CallingProcess BPEL process -->
	<wsdl:portType name="CallingProcess">
		<wsdl:operation name="process">
			<wsdl:input message="client:CallingProcessRequestMessage"/>
		</wsdl:operation>
	</wsdl:portType>

	<!-- portType implemented by the requester of CallingProcess BPEL process
	for asynchronous callback purposes
	-->
	<wsdl:portType name="CallingProcessCallback">
		<wsdl:operation name="processResponse">
			<wsdl:input message="client:CallingProcessResponseMessage"/>
		</wsdl:operation>
	</wsdl:portType>

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
	PARTNER LINK TYPE DEFINITION
	the CallingProcess partnerLinkType binds the provider and
	requester portType into an asynchronous conversation.
	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<plnk:partnerLinkType name="CallingProcess">
		<plnk:role name="CallingProcessProvider" portType="client:CallingProcess"/>
		<plnk:role name="CallingProcessRequester" portType="client:CallingProcessCallback"/>
	</plnk:partnerLinkType>
</wsdl:definitions>
